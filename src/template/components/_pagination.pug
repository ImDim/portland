mixin pagination__item(page)   
    li.pagination__item&attributes(attributes)
        a.pagination__link(href="/")
            span.pagination__text
                if page == '<'
                    i.fas.fa-angle-left
                else if page == '>'
                    i.fas.fa-angle-right
                else 
                    =page

ul.pagination
    +pagination__item('<')(class="pagination__item_prev")
    +pagination__item('1')
    +pagination__item('2')
    +pagination__item('3')
    +pagination__item('4')(class="pagination__item_active")
    +pagination__item('5')
    +pagination__item('6')
    +pagination__item('7')
    +pagination__item('8')
    +pagination__item('>')(class="pagination__item_next")
